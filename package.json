{
  "name": "restoration",
  "private": true,
  "type": "module",
  "workspaces": ["apps/*", "packages/*"],
  "engines": {
    "node": ">=18.17"
  },
  "packageManager": "npm@10",
  "scripts": {
    "prebuild": "npm run prisma:generate",
    "build": "npm-run-all -p build:*",
    "build:api": "tsc -p apps/api/tsconfig.json",
    "build:bot": "tsc -p apps/bot/tsconfig.json",
    "build:worker": "tsc -p apps/worker/tsconfig.json",
    "start": "echo \"Use start:all | start:api | start:bot | start:worker\" && exit 0",
    "start:all": "sh -lc \"(npm run db:migrate || npm run db:push) && npm-run-all -p start:api start:bot start:worker\"",
    "start:api": "node apps/api/dist/index.js",
    "start:bot": "node apps/bot/dist/bot.js",
    "start:worker": "node apps/worker/dist/worker.js",
    "prisma:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate deploy",
    "register": "npm run build:bot && node apps/bot/dist/registerCommands.js"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "axios": "^1.7.2",
    "bullmq": "^5.11.0",
    "discord.js": "^14.15.3",
    "express": "^4.19.2",
    "ioredis": "^5.4.1",
    "npm-run-all": "^4.1.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.0.0",
    "prisma": "^5.22.0",
    "typescript": "^5.5.4"
  }
}
